            <div>
                <textarea id="ML_script" name="ML_script" rows="20" cols="80" class="ratio ratio-1x1">Write your script here...</textarea>
                <input type="submit" value="playback" class="btn btn-primary">
            </div>

        </div>
        <div name="clips" class=" me-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center overflow-hidden ratio">
